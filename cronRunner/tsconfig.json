{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"] // This enables @src alias
    },
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es2021",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "types"]
}
